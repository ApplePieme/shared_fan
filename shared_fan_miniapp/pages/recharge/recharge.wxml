<view class="main">
    <form bindsubmit="formSubmit">
        <view class="page-section">
            <view class="page-section-title">充值金额</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__bd" style="margin: 30rpx 0">
                        <input class="weui-input" name="value" placeholder="请输入充值金额" />
                    </view>
                </view>
            </view>
        </view>
        <view class="btn-area">
            <button style="margin: 30rpx 0" type="primary" formType="submit">充值</button>
        </view>
    </form>
</view>